<center><p><em>all fields below are required</em></p></center>
<div class="signup-background">
  <%= form_for @user, class: "form-horizontal new-user" do |f| %>
      
      <%= f.text_field :first_name, placeholder: "First Name", class: "col-sm-2" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "col-sm-2" %>

      <%= f.text_field :email, placeholder: "Email Address", class: "col-sm-2" %>

      <%= f.password_field :password, placeholder: "Password", class: "col-sm-2" %>
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "col-sm-2" %>

      <%= f.label :over_18, "I am over 18:" %>
      <%= f.check_box :over_18 %>

      <br/>

      <%= f.submit "Sign Up", class: "button turquoise large" %>

  <% end %>
</div>