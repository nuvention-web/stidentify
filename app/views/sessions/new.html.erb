<div class="signup-background">
  <% if @message %>
    <p><%= @message %></p>
  <% end %>
  <%= form_tag "/session", class: "form-horizontal sign-in" do %>
    <%= text_field_tag :email, nil, placeholder: "Email Address", class: "col-sm-2" %>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "col-sm-2" %>
    <%= submit_tag "Sign In", class: "button turquoise middle" %>

  <% end %>
</div>