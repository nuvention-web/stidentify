.landing-panel1 {
  background-image: url("http://a.fastcompany.net/multisite_files/fastcompany/poster/2013/01/3004507-poster-1280-built-app-help-his-high-school-debate-team.jpg"); 
  background-size: 120%;
  background-position: 40% 10%;
  background-attachment: fixed;
  background-repeat:no-repeat;
  color: white;
  overflow: auto;
  /* vh units are % relative to viewport */
  height: 100vh;
}


.panel1-content { 
  color: white;
  font-size: 22px;
  position: absolute;
  top: 35%;
  left: 50%;
  width: 45%;
  background: rgba(155, 155, 155, 0.7);
  border-radius: 10px;
  padding: 2em;
  line-height: 1.4em;
  overflow: auto;
}

.panel4-content1 { 
  color: white;
  font-size: 22px;
  background: rgba(155, 155, 155, 0.7);
